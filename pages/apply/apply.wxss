/* pages/apply/apply.wxss */
.pg-apply { 
  background: #ff4325;
  height: 100%;
  width: 100%;
}
.topimg {
  display: block;
  width: 100%;
}
.wrapper {
  background: #fff;
  border-radius: 10rpx;
  width: calc(100% - 32rpx);
  margin: 0 auto 32rpx auto;
  padding: 32rpx;
  box-sizing: border-box;
}
.list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.list .item {
  width: 31%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 34rpx 0;
  border: 1rpx solid #e0d3ca;
  margin-bottom: 20rpx;
}
.list .item image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}
.list .item:nth-child(6) .text1 {
  color: #999;
}
.list .item .text2 {
  font-size: 12px;
  color: #999;
}
.apply-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 20px;
  border-radius: 88rpx;
  text-align: center;
  color: #fff;
  background: #ff4325;
  margin-bottom: 30rpx;
}

.tip {
  margin-top: 60rpx;
  background: #fafafa;
  border-radius: 10rpx;
  color: #666;
  font-size: 14px;
  padding: 40rpx 20rpx;
  position: relative;
}
.tip .title {
  position: absolute;
  left: 0;
  top: 0;
  background: #ff4325;
  color: #fff;
  font-size: 12px;
  padding: 4rpx 20rpx;
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.tip .text {
  margin-top: 34rpx;
}